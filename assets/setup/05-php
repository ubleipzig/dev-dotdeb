#!/bin/bash
#
set -e

# localisation is UTC+1
cat >/etc/php/7.2/mods-available/date.ini <<EOF
[Date]
date.timezone = ${TIME_ZONE}
EOF

phpenmod date

sed -e "s/^\(max_execution_time\)\s*=.*\$/\1 = 240/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^\(memory_limit\)\s*=.*\$/\1 = 512M/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^\(error_reporting\)\s*=.*\$/\1 = E_ALL/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^\(display_errors\)\s*=.*\$/\1 = On/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^\(display_startup_errors\)\s*=.*\$/\1 = On/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^\(post_max_size\)\s*=.*\$/\1 = 2G/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^\(upload_max_filesize\)\s*=.*\$/\1 = 2G/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^;\?\s*\(always_populate_raw_post_data\)\s*=.*\$/\1 = -1/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^;\?\s*\(max_input_vars\)\s*=.*\$/\1 = 1500/" -i /etc/php/7.2/fpm/php.ini
sed -e "s/^\(xdebug\.client_host\).*\$/\1 = ${DOCKERHOST}/" -i /etc/php/7.2/mods-available/xdebug.ini

sed -e "s/^\(user\)\s*=.*\$/\1 = ${APP_USER}/" -i /etc/php/7.2/fpm/pool.d/www.conf
sed -e "s/^\(group\)\s*=.*\$/\1 = ${APP_USER}/" -i /etc/php/7.2/fpm/pool.d/www.conf
sed -e "s/^\(listen\)\s*=.*\$/\1 = 127.0.0.1:9001 /" -i /etc/php/7.2/fpm/pool.d/www.conf

chown ${APP_USER}:${APP_USER} /var/lib/xdebug -R

if [ ! -d  "/run/php" ]; then
    mkdir /run/php && chown ${APP_USER} /run/php -R
fi

cat >/etc/supervisor/conf.d/php-fpm.conf <<EOF
[program:php-fpm]
priority = 10
environment = HOME="/var/www"
command = /usr/sbin/php-fpm7.2 --nodaemonize --fpm-config /etc/php/7.2/fpm/php-fpm.conf
redirect_stderr = true
user = root
autostart = true
autorestart = true
stopasgroup = true
redirect_stderr = true
stdout_logfile = ${LOG_DIR}/supervisor/supervisord.log
EOF
